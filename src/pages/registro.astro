---
import Layout from '../layouts/Layout.astro';
import gato from '../assets/gato.png';
import '../styles/global.css';
import Sample from '../components/sample.astro';
import CardLD from '../components/cardLD.astro';
---

<Layout>
<Sample>
    <div class="container-registro">
        <div class="datos-Alumno">
            <h1 class="nombre">Juan Perez</h1>
            <img class="foto-perfil" src={gato.src} alt="perfil-img">
        </div>
        <div class="cards">
            <div class="presents">
                <h2>Present</h2>
            </div>
            <div class="retards">
                <h2>Retards</h2>
            </div>
            <div class="faltes">
                <h2>Faltes</h2>
            </div>
            <div class="justificades">
                <h2>Justificades</h2>
            </div>
        </div>
        
    </div>
    <div class="test">
        <CardLD />
        <CardLD />
    </div>
</Layout>
</Sample>


<style>
    .container-registro{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 100px;
        background-color: rgba(0, 195, 255, 0.368);
        border-radius: 20px;
    }
    .container-registro h1{
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .foto-perfil{
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin-bottom: 30px;
    }

    .cards{
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;        
    }

    .cards > div {
        background-color: white;        /* Fondo de cada card */
        border-radius: 15px;            /* Bordes redondeados */
        padding: 50px;                  /* Espacio interno */
        width: 150px;                    /* Ancho fijo, pero se puede hacer % */
        text-align: center;             /* Centrar texto */
        box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Sombra suave */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: default;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .cards > div:hover {
        transform: translateY(-5px);    /* Efecto hover */
        box-shadow: 0 10px 15px rgba(0,0,0,0.2);
    }

    .cards h2 {
        margin: 0;
        font-size: 1.2rem;
        color: #333;
    }

    .test{
        display: flex;
        margin-top: 50px;
        justify-content: center;
        align-items: center;
        margin-bottom: 50px;
    }

</style>