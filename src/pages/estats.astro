---
import Sample from "../components/sample.astro"
---

<Sample>
    <div class="container">
        <h1>Lista de Usuarios Registrados</h1>
        <div id="loading" class="loading"></div>
        <div id="error-message" class="error-message"></div>
        
        <div class="table-wrapper">
            <table id="user-table" class="data-table">
                <colgroup> 
                    <col style="width: 600px; text-align: center;"> 
                    <col style="width: 20%; text-align: center;"> 
                    <col style="width: 10%; text-align: center;"> 
                    <col style="width: 15%; text-align: center;"> 
                    <col style="width: 18%; text-align: center;"> 
                </colgroup>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre Completo</th>
                        <th>Email</th>
                        <th>Tipo de Usuario</th>
                        <th>Fecha de Creaci贸n</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</Sample>

<script>
    // Funci贸n para manejar la l贸gica de carga y renderizado
    async function fetchAndRenderUsers(tableId, loadingId, errorId) {
        const tableBody = document.querySelector(`#${tableId} tbody`);
        const loadingMessage = document.getElementById(loadingId);
        const errorMessage = document.getElementById(errorId);
        
        if (!tableBody || !loadingMessage || !errorMessage) return;

        loadingMessage.style.display = 'block';
        errorMessage.style.display = 'none';
        tableBody.innerHTML = '';

        try {
            const response = await fetch('/api/getUser'); 
            
            if (!response.ok) {
                throw new Error(`API Fallida o no encontrada (C贸digo: ${response.status}). Verifique la ruta del fichero API.`);
            }

            const result = await response.json();
            const users = result.data;
            
            if (users.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5" class="no-data">No hay usuarios registrados en la base de datos.</td></tr>';
            } else {
                users.forEach(user => {
                    const row = tableBody.insertRow();
                    
                    const dateOptions = { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' };
                    const formattedDate = new Date(user.fecha_creacion).toLocaleDateString('es-ES', dateOptions);

                    const tipoUsuario = user.tipo_usuario.charAt(0).toUpperCase() + user.tipo_usuario.slice(1);

                    row.innerHTML = `
                        <td>${user.usuarios_id}</td>
                        <td class="name-cell">${user.nombre} ${user.apellidos}</td>
                        <td>${user.email}</td>
                        <td class="type-${user.tipo_usuario}">${tipoUsuario}</td>
                        <td>${formattedDate}</td>
                    `;
                });
            }

        } catch (error) {
            console.error(' Error al cargar usuarios:', error);
            errorMessage.textContent = `Error al cargar los datos: ${error.message}`;
            errorMessage.style.display = 'block';
            tableBody.innerHTML = '<tr><td colspan="5" class="error-data">Fallo en la conexi贸n.</td></tr>';
        } finally {
            loadingMessage.style.display = 'none';
        }
    }

    // Inicializa la carga de la primera tabla
    document.addEventListener('DOMContentLoaded', () => {
        fetchAndRenderUsers('user-table', 'loading', 'error-message');
        // Inicializa la carga de la segunda tabla
        fetchAndRenderUsers('user-table-2', 'loading-2', 'error-message-2'); 
    });
</script>


<style>


.container {
    max-width: 1200px;
    margin: 50px auto;
    padding: 24px 20px 32px;
    margin-bottom: 20rem;
    margin-top: 10rem;
    text-align: center;
}

h1 {
    text-align: center;
    color: #00ffff;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 28px;
    text-shadow: 0 0 12px #00ccff;
    letter-spacing: 0.05em;
}

.loading,
.error-message {
    text-align: center;
    padding: 14px 18px;
    margin-bottom: 20px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
}

.loading {
    color: #66ccff;
    background: rgba(0, 51, 102, 0.5);
    border: 1px solid #00ccff;
}

.error-message {
    color: #ff3366;
    background: rgba(102, 0, 0, 0.6);
    border: 1px solid #ff3366;
}

.table-wrapper {
    overflow-x: auto;
    max-height: 70vh;
    background: radial-gradient(circle at top, rgba(0, 51, 102, 0.9), rgba(0, 0, 30, 0.9));
    border-radius: 14px;
    box-shadow: 0 0 25px rgba(0, 153, 255, 0.5);
    border: 1px solid rgba(0, 204, 255, 0.5);
    padding: 6px;
}

.table-wrapper::-webkit-scrollbar {
    height: 8px;
    width: 8px;
}
.table-wrapper::-webkit-scrollbar-thumb {
    background: rgba(0, 204, 255, 0.6);
    border-radius: 999px;
}
.table-wrapper::-webkit-scrollbar-track {
    background: rgba(0, 0, 30, 0.9);
}

.data-table {
    width: 100%;
    border-collapse: collapse;
    color: #e0f7ff;
    font-family: 'Consolas', 'Courier New', monospace;
    min-width: 800px;
    font-size: 1.3rem;
}

.data-table thead th {
    position: sticky;
    top: 0;
    z-index: 2;
    background: linear-gradient(90deg, #003366, #004d99);
    color: #00ffff;
    padding: 14px 20px;
    text-align: left;
    text-transform: uppercase;
    font-weight: 700;
    border-bottom: 3px solid #00ccff;
    letter-spacing: 1px;
    white-space: nowrap;
}


.data-table tbody td {
    padding: 2rem 5rem;
    border-bottom: 1px solid rgba(0, 102, 153, 0.5);
    transition: background-color 0.25s ease, transform 0.1s ease;
}


 .data-table tbody tr:nth-child(even) {
    background-color: rgba(0, 51, 102, 0.4);
}

.data-table tbody tr:hover {
    background-color: rgba(0, 153, 255, 0.35);
    color: #ffffff;
    cursor: default;
    transform: translateY(-1px);
}

.data-table td:nth-child(1) {
    font-weight: 600;
    color: #66ccff;
    text-align: center;
}

.name-cell {
    color: #ffffff;
    font-weight: 500;
}

.data-table td:nth-child(3) {
    max-width: 260px;
    word-wrap: break-word;
}

/* Chips tipo usuario */
.type-estudiante,
.type-profesor,
.type-personal {
    display: inline-block;
    min-width: 110px;
    text-align: center;
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 0.82rem;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.type-estudiante {
    background-color: rgba(0, 153, 51, 0.6);
    color: #ccffcc;
}

.type-profesor {
    background-color: rgba(255, 140, 0, 0.7);
    color: #fff7d6;
}

.type-personal {
    background-color: rgba(102, 0, 153, 0.7);
    color: #f1ddff;
}

/* Fecha */
.data-table td:nth-child(5) {
    white-space: nowrap;
    font-size: 0.9rem;
    color: #d0ecff;
}

/* Filas especiales de mensaje */
.no-data,
.error-data {
    text-align: center;
    font-style: italic;
    color: #66ccff;
    padding: 14px 0;
}



@media (max-width: 768px) {
    .container {
        margin: 30px auto;
        padding: 16px 10px 24px;
    }

    h1 {
        font-size: 1.7rem;
        margin-bottom: 18px;
    }

    .data-table {
        min-width: 600px;
        font-size: 0.85rem;
    }

    .data-table thead th,
    .data-table tbody td {
        padding: 9px 8px;
    }
}
</style>