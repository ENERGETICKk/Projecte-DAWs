<style>
.container {
    max-width: 1200px;
    margin: 50px auto;
    padding: 24px 20px 32px;
}

/* TÃ­tulo */
h1 {
    text-align: center;
    color: #00ffff;
    font-size: 2.3rem;
    font-weight: 700;
    margin-bottom: 28px;
    text-shadow: 0 0 12px #00ccff;
    letter-spacing: 0.05em;
}

/* Mensajes de estado */
.loading,
.error-message {
    text-align: center;
    padding: 14px 18px;
    margin-bottom: 20px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
}

.loading {
    color: #66ccff;
    background: rgba(0, 51, 102, 0.5);
    border: 1px solid #00ccff;
}

.error-message {
    color: #ff3366;
    background: rgba(102, 0, 0, 0.6);
    border: 1px solid #ff3366;
}

/* Contenedor de tabla (scroll, fondo, sombra) */
.table-wrapper {
    overflow-x: auto;
    max-height: 70vh;                 /* Scroll vertical si hay muchos usuarios */
    background: radial-gradient(circle at top, rgba(0, 51, 102, 0.9), rgba(0, 0, 30, 0.9));
    border-radius: 14px;
    box-shadow: 0 0 25px rgba(0, 153, 255, 0.5);
    border: 1px solid rgba(0, 204, 255, 0.5);
    padding: 6px;
}

/* Scrollbar custom (compatible con navegadores Chromium) */
.table-wrapper::-webkit-scrollbar {
    height: 8px;
    width: 8px;
}
.table-wrapper::-webkit-scrollbar-thumb {
    background: rgba(0, 204, 255, 0.6);
    border-radius: 999px;
}
.table-wrapper::-webkit-scrollbar-track {
    background: rgba(0, 0, 30, 0.9);
}

/* Tabla */
.data-table {
    width: 100%;
    border-collapse: collapse;
    color: #e0f7ff;
    font-family: 'Consolas', 'Courier New', monospace;
    min-width: 800px;
    font-size: 0.95rem;
}

/* Cabecera: pegajosa al hacer scroll */
.data-table thead th {
    position: sticky;
    top: 0;
    z-index: 2;
    background: linear-gradient(90deg, #003366, #004d99);
    color: #00ffff;
    padding: 14px 12px;
    text-align: left;
    text-transform: uppercase;
    font-weight: 700;
    border-bottom: 3px solid #00ccff;
    letter-spacing: 1px;
    white-space: nowrap;
}


/* Celdas del cuerpo */
.data-table tbody td {
    padding: 11px 12px;
    border-bottom: 1px solid rgba(0, 102, 153, 0.5);
    transition: background-color 0.25s ease, transform 0.1s ease;
}

/* Zebra stripes */
.data-table tbody tr:nth-child(even) {
    background-color: rgba(0, 51, 102, 0.4);
}

/* Hover row */
.data-table tbody tr:hover {
    background-color: rgba(0, 153, 255, 0.35);
    color: #ffffff;
    cursor: default;
    transform: translateY(-1px);
}

/* Columna ID */
.data-table td:nth-child(1) {
    font-weight: 600;
    color: #66ccff;
    text-align: center;
}

/* Nombre */
.name-cell {
    color: #ffffff;
    font-weight: 500;
}

/* Email: dejar que corte si es largo */
.data-table td:nth-child(3) {
    max-width: 260px;
    word-wrap: break-word;
}

/* Chips tipo usuario */
.type-estudiante,
.type-profesor,
.type-personal {
    display: inline-block;
    min-width: 110px;
    text-align: center;
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 0.82rem;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.type-estudiante {
    background-color: rgba(0, 153, 51, 0.6);
    color: #ccffcc;
}

.type-profesor {
    background-color: rgba(255, 140, 0, 0.7);
    color: #fff7d6;
}

.type-personal {
    background-color: rgba(102, 0, 153, 0.7);
    color: #f1ddff;
}

/* Fecha */
.data-table td:nth-child(5) {
    white-space: nowrap;
    font-size: 0.9rem;
    color: #d0ecff;
}

/* Filas especiales de mensaje */
.no-data,
.error-data {
    text-align: center;
    font-style: italic;
    color: #66ccff;
    padding: 14px 0;
}



