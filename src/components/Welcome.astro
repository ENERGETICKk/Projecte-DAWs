---
import astroLogo from '../assets/astro.svg';
import background from '../assets/fondo.svg';
import '../styles/global.css';

---


<div class="container">
	<img src={background.src} alt="Background" class="background" />
	<div>
		<h1 class="titulo">JKA Systems</h1>
		<button class="acceder">Get Started</button>
	</div>
</div>

<style>
	.container{
		margin-top: 20%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	.container > div {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }
	.background {
		position: fixed;
		inset: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -1;
		pointer-events: none;
	}
	.titulo {
		color: grey;
		font-size: 4rem;
		text-align: center;
		margin: 0;
		text-shadow: 2px 2px 2px rgb(51, 51, 51);
	}
	.acceder{
		padding: 10px 30px;
		border-radius: 10px;
		background-color: grey;
	}
	.acceder:hover {
		background-color: rgb(36, 36, 36);
	}
</style>

<script>
    // optional chaining â€” no error if null
    document.querySelector('.acceder')?.addEventListener('click', () => {
        window.location.href = '/user';
    });
</script>