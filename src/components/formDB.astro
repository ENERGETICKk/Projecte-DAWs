---
import '../styles/global.css';
---

<h1>Dar de Alta Usuarios</h1>
<form id="user-form" class="form">
  <div class="form-container">
    <li>
      <label for="nombre" class="form-label">Nombre</label>
      <input type="text" id="nombre" name="nombre" placeholder="Nombre del estudiante" class="input-field" required />
    </li>
    <li>
      <label for="apellidos" class="form-label">Apellidos</label>
      <input type="text" id="apellidos" name="apellidos" placeholder="Apellidos del estudiante" class="input-field" required />
    </li>
    <li>
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" placeholder="Email del estudiante" class="input-field" required />
    </li>
    <li>
      <label for="tipo_user" class="form-label">Tipo de Usuario</label>
      <select id="tipo_user" name="tipo_user" class="input-field" required>
        <option value="estudiante">Estudiante</option>
        <option value="profesor">Profesor</option>
        <option value="administrador">Administrador</option>
      </select>
    </li>
    <button type="submit" class="submit">Enviar</button>
    <div id="mensaje" class="mensaje"></div>
  </div>
</form>

<script type="module">
const form = document.getElementById('user-form');
const mensaje = document.getElementById('mensaje');

form.addEventListener('submit', async (e) => {
  e.preventDefault();

  const formData = new FormData(form);
  const userData = {
    nombre: formData.get('nombre'),
    apellidos: formData.get('apellidos'),
    email: formData.get('email'),
    tipo_user: formData.get('tipo_user')
  };

  // Validación
  if (!userData.nombre || !userData.apellidos || !userData.email || !userData.tipo_user) {
    mensaje.textContent = '❌ Todos los campos son obligatorios';
    mensaje.className = 'mensaje error';
    return;
  }

  try {
    mensaje.textContent = '⏳ Guardando usuario...';
    mensaje.className = 'mensaje loading';

    const res = await fetch('/api/addUser', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(userData)
    });

    const result = await res.json();

    if (!res.ok) throw new Error(result.error || 'Error desconocido');

    mensaje.textContent = '✅ Usuario creado correctamente!';
    mensaje.className = 'mensaje success';
    form.reset();

    setTimeout(() => {
      mensaje.textContent = '';
      mensaje.className = 'mensaje';
    }, 3000);

    console.log('Usuario creado:', result.data);
  } catch (err) {
    mensaje.textContent = `❌ Error: ${err.message}`;
    mensaje.className = 'mensaje error';
    console.error(err);
  }
});
</script>


<style>
h1 {
  text-align: center;
  font-size: 2.5rem;
  color: #00f0ff;
  text-shadow: 0 0 8px #00f0ff, 0 0 16px #00bfff;
  margin-bottom: 25px;
  font-family: 'Segoe UI', sans-serif;
}

.form {
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 1000px;
}

.form-container {
  background: linear-gradient(145deg, #0d1b2a, #1b2a4a);
  padding: 40px 50px;
  border-radius: 20px;
  border: 2px solid #00f0ff;
  box-shadow: 0 0 20px rgba(0, 240, 255, 0.5), 0 10px 30px rgba(0,0,0,0.3);
  max-width: 500px;
  width: 100%;
  list-style: none;
  transform: translateZ(0);
}

.form-container li {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-weight: bold;
  margin-bottom: 5px;
  color: #00cfff;
  letter-spacing: 0.5px;
}

.input-field {
  width: 100%;
  padding: 12px;
  font-size: 15px;
  border: 2px solid #00f0ff;
  border-radius: 12px;
  background-color: #12223f;
  color: #fff;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #00bfff;
  box-shadow: 0 0 10px #00f0ff;
  outline: none;
  background-color: #0d1b2a;
}

.submit {
  width: 100%;
  padding: 14px;
  background: linear-gradient(90deg, #00f0ff, #007BFF);
  color: #fff;
  border: none;
  border-radius: 12px;
  font-weight: bold;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s ease;
  letter-spacing: 0.5px;
  box-shadow: 0 0 15px rgba(0, 240, 255, 0.6);
}

.submit:hover {
  background: linear-gradient(90deg, #007BFF, #00f0ff);
  box-shadow: 0 0 20px #00f0ff, 0 5px 25px rgba(0,0,0,0.4);
}

.mensaje {
  margin-top: 15px;
  padding: 12px;
  border-radius: 10px;
  text-align: center;
  font-weight: bold;
  display: none;
  font-family: 'Segoe UI', sans-serif;
  letter-spacing: 0.5px;
}

.mensaje.loading {
  display: block;
  background-color: #0a192f;
  color: #00bfff;
  border: 2px solid #00bfff;
  box-shadow: 0 0 10px #00bfff;
}

.mensaje.success {
  display: block;
  background-color: #0a192f;
  color: #00ffae;
  border: 2px solid #00ffae;
  box-shadow: 0 0 10px #00ffae;
}

.mensaje.error {
  display: block;
  background-color: #0a192f;
  color: #ff4c4c;
  border: 2px solid #ff4c4c;
  box-shadow: 0 0 10px #ff4c4c;
}
</style>