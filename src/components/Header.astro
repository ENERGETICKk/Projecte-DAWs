---
import astroLogo from '../assets/logo.svg';
import background from '../assets/fondo.svg';
import '../styles/global.css';

---



<div class="container">
	<img src={background.src} alt="Background" class="background" />
    <header class="header">
        <div class="logo">
            <a href="/user">
                <img src={astroLogo.src} alt="Astro Logo" width="50"/>
            </a>
        </div>
        <div class="links">
            <a href="/"><img src="/home-header.svg" alt="Home"></a>
            <a href="/"><img src="/alien-header.svg" alt="Alien"></a>
            <a href="/"><img src="/checklist-header.svg" alt="Checklist"></a>
            <a href="/"><img src="/amongus-header.svg" alt="Among Us"></a>
        </div>
    </header>
</div>

<style is:global>
    /* Header futurista / tecnológico */
.header {
  position: sticky;
  top: 0;
  left: 0;
  width: 100%;
  height: 120px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 3rem;
  border-radius: 1rem;
  background: rgba(0, 26, 77, 0.6); /* azul oscuro semi-transparente */
  backdrop-filter: blur(10px);
  box-shadow: 0 0 20px rgba(0, 153, 255, 0.5), 0 0 40px rgba(0, 204, 255, 0.3);
  border: 1px solid rgba(0, 204, 255, 0.4);
  z-index: 1000;
  transition: background 0.3s ease, box-shadow 0.3s ease;
}

/* Logo con efecto glow */
.logo img {
  width: 80px;
  border-radius: 50%;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  box-shadow: 0 0 10px #00ccff, 0 0 20px #3399ff;
}

.logo img:hover {
  transform: scale(1.2);
  box-shadow: 0 0 20px #00e5ff, 0 0 40px #3399ff;
}

/* Links estilo futurista */
.links {
  display: flex;
  gap: 3rem; /* Espacio entre los iconos */
  justify-content: center;
  margin-right: 3rem;
  transition: all 0.3s ease;
}

/* Aplicar el estilo de logos a las imágenes dentro de .links */
.links a img {
  width: 3rem; /* Tamaño de imagen adaptado */
  height: auto;
  filter: 
    drop-shadow(0 0 5px #00ffff)
    drop-shadow(0 0 15px #3399ff); /* Filtro de neón inicial */
  transform: scale(1.08);
  transition: all 0.3s ease;
}

/* Hover con efecto de neón más intenso y rotación sutil */
.links a img:hover {
  filter:
    drop-shadow(0 0 15px #00ffff)
    drop-shadow(0 0 35px #3399ff); /* Filtro de neón más intenso al hacer hover */
  transform: scale(1.15) rotate(2deg); /* Efecto de escala y rotación */
}

/* Fondo del header fijo y animación ligera */
.background {
  position: fixed;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
  pointer-events: none;
  filter: brightness(0.7) contrast(1.2);
  transition: filter 0.3s ease;
}

/* Responsive header */
@media (max-width: 768px) {
  .header {
    flex-direction: column;
    height: auto;
    padding: 1rem 1.5rem;
  }
  .links {
    gap: 1.5rem;
    margin: 1rem 0 0 0;
  }
}



</style>

<script>
    // optional chaining — no error if null
    document.querySelector('.acceder')?.addEventListener('click', () => {
        window.location.href = '/index';
    });
</script>