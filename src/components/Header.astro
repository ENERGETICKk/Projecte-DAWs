---
import astroLogo from '../assets/logo.svg';
import background from '../assets/fondo.svg';
import '../styles/global.css';

---



<div class="container">
	<img src={background.src} alt="Background" class="background" />
    <header class="header">
        <div class="logo">
            <img src={astroLogo.src} alt="Astro Logo" width="50"/>
        </div>
        <div class="links">
            <a href="/">Home</a>
            <a href="">üîç</a>
            <a href="">‚öôÔ∏è</a>
            <a href="">üè´</a>
        </div>
    </header>
</div>

<style>
	.container{
        margin-bottom: 170px;
	}
    .header{
        position: sticky;
        height: 120px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 30px;
        border-radius: 10px;

        /* üîπ Nuevo: Fijar el header arriba */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;

        /* üîπ Nuevo: desenfoque moderno de fondo */
        backdrop-filter: blur(8px);
        margin-bottom: 80px;
    }

	.background {
		position: fixed;
		inset: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -1;
		pointer-events: none;
	}

    .links{
        display: flex;
        gap: 40px;
        margin-right: 100px;
    }

    .links a{
        text-decoration: none;
        color: white;
        font-weight: 400;
        font-size: 40px;
        transition: transform 0.3s ease;
    }
    .links a:hover {
        color: rgb(198, 198, 198);
        transform: scale(1.3);
    }

    .logo img{
        border-radius: 60px;
        width: 80px;
        transition: transform 0.3s ease;
        margin-left: 100px;
    }
    .logo img:hover {
        transform: scale(1.3);
    }
	
</style>

<script>
    // optional chaining ‚Äî no error if null
    document.querySelector('.acceder')?.addEventListener('click', () => {
        window.location.href = '/index';
    });
</script>