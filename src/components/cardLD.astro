---
import '../styles/global.css';

interface Props {
  coverImage: string;
  titleImage: string;
  characterImage: string;
  href?: string;
}

const { coverImage, titleImage, characterImage, href = '#' } = Astro.props;
---

<a href={href}>
  <div class="card">
    <div class="wrapper">
      <img src={coverImage} class="cover-image" alt="cover" />
    </div>
    <img src={titleImage} class="title" alt="title"/>
    <img src={characterImage} class="character"  alt="char"/>
  </div>
</a>

<style>






  :root {
  --card-height: 300px;
  --card-width: calc(var(--card-height) / 1.5);
}

.card {
  width: var(--card-width);
  height: var(--card-height);
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 0 36px;
  perspective: 2500px;
  margin: 0 50px;
  cursor: pointer;
  transform-style: preserve-3d;
  transition: all 0.5s ease;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.wrapper {
  transition: all 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
  background: #000;
}

/* Efecto flip horizontal */
.card:hover .wrapper {
  transform: rotateY(180deg) scale(1.1);
  box-shadow: 0 40px 80px rgba(0, 0, 0, 0.7);
}

.card:hover .cover-image {
  transform: rotateY(180deg) scale(1.2);
  filter: brightness(0.7) blur(2px);
}

/* Overlay con efecto de cortina */
.wrapper::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  transition: left 0.8s ease;
  z-index: 5;
}

.card:hover .wrapper::before {
  left: 100%;
}

/* Gradient overlay desde abajo */
.wrapper::after {
  content: "";
  position: absolute;
  bottom: -100%;
  left: 0;
  width: 100%;
  height: 60%;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.95),
    rgba(0, 0, 0, 0.7),
    transparent
  );
  transition: bottom 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  z-index: 4;
}

.card:hover .wrapper::after {
  bottom: 0;
}

/* Título con efecto slide desde abajo */
.title {
  width: 100%;
  transition: all 0.7s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  filter: drop-shadow(0 5px 10px rgba(0, 0, 0, 0.8));
  transform: translateY(150px) scale(0.5);
  opacity: 0;
}

.card:hover .title {
  transform: translateY(-80px) scale(1.3) rotateZ(-3deg);
  opacity: 1;
  filter: drop-shadow(0 15px 30px rgba(0, 0, 0, 0.9))
          brightness(1.3);
}

/* Personaje con efecto slide lateral */
.character {
  width: 100%;
  position: absolute;
  z-index: -1;
  filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.8));
  transform: translateX(-150%) scale(0.7) rotateZ(-15deg);
  opacity: 0;
  transition: all 0.9s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.card:hover .character {
  opacity: 1;
  transform: translateX(0%) translateY(-50%) scale(1.4) rotateZ(5deg);
  filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 1))
          brightness(1.2) contrast(1.1);
}

/* CONTADOR DE ASISTENCIA - EFECTO EXPLOSION CIRCULAR */
.attendance-counter {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  background: radial-gradient(circle, rgba(10, 10, 30, 0.98), rgba(5, 5, 15, 0.95));
  border: 3px solid transparent;
  border-radius: 50%;
  width: 120px;
  height: 120px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2px;
  z-index: 15;
  box-shadow: 
    0 0 0 0 rgba(255, 215, 0, 0),
    inset 0 0 30px rgba(0, 0, 0, 0.8);
  opacity: 0;
  transition: none;
}

.card:hover .attendance-counter {
  animation: explosionAppear 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  animation-delay: 0.4s;
}

@keyframes explosionAppear {
  0% {
    transform: translate(-50%, -50%) scale(0) rotate(0deg);
    opacity: 0;
    box-shadow: 
      0 0 0 0 rgba(255, 215, 0, 0),
      inset 0 0 30px rgba(0, 0, 0, 0.8);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.5) rotate(180deg);
    opacity: 1;
    box-shadow: 
      0 0 0 30px rgba(255, 215, 0, 0.4),
      inset 0 0 30px rgba(0, 0, 0, 0.8);
    border-color: rgba(255, 215, 0, 1);
  }
  100% {
    transform: translate(-50%, -50%) scale(1) rotate(360deg);
    opacity: 1;
    box-shadow: 
      0 0 0 0 rgba(255, 215, 0, 0),
      0 0 50px rgba(255, 215, 0, 0.6),
      inset 0 0 30px rgba(0, 0, 0, 0.8);
    border-color: rgba(255, 215, 0, 0.8);
  }
}

.attendance-label {
  font-size: 9px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: rgba(255, 215, 0, 0.9);
  text-shadow: 0 0 15px rgba(255, 215, 0, 0.8);
  opacity: 0;
  transform: translateY(10px);
}

.card:hover .attendance-label {
  animation: fadeInUp 0.4s ease forwards;
  animation-delay: 1s;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.attendance-number {
  font-size: 48px;
  font-weight: 900;
  font-family: 'Arial Black', sans-serif;
  background: linear-gradient(180deg, #fff 0%, #ffd700 50%, #ff8c00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
  position: relative;
  opacity: 0;
}

.card:hover .attendance-number {
  animation: numberReveal 1.2s ease forwards;
  animation-delay: 1.1s;
}

/* Efecto de contador incremental con cambio de números */
@keyframes numberReveal {
  0% {
    opacity: 0;
    transform: scale(0.3) rotateY(90deg);
    filter: blur(10px);
  }
  10% {
    opacity: 1;
    transform: scale(1.5) rotateY(0deg);
    filter: blur(8px);
  }
  20% {
    transform: scale(0.8) rotateX(20deg);
    filter: blur(6px);
  }
  30% {
    transform: scale(1.3) rotateX(-20deg);
    filter: blur(4px);
  }
  40% {
    transform: scale(0.9) rotateZ(10deg);
    filter: blur(3px);
  }
  50% {
    transform: scale(1.2) rotateZ(-10deg);
    filter: blur(2px);
  }
  60% {
    transform: scale(0.95) rotateY(15deg);
    filter: blur(1px);
  }
  70% {
    transform: scale(1.15) rotateY(-15deg);
    filter: blur(0.5px);
  }
  85% {
    transform: scale(1) rotateY(0deg) rotateX(0deg) rotateZ(0deg);
    filter: blur(0px);
  }
  100% {
    opacity: 1;
    transform: scale(1);
    filter: blur(0px);
  }
}

/* Anillos de energía que se expanden */
.attendance-counter::before,
.attendance-counter::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  border: 2px solid rgba(255, 215, 0, 0.6);
  border-radius: 50%;
  opacity: 0;
}

.card:hover .attendance-counter::before {
  animation: ringExpand 1.5s ease-out;
  animation-delay: 1s;
}

.card:hover .attendance-counter::after {
  animation: ringExpand 1.5s ease-out;
  animation-delay: 1.2s;
}

@keyframes ringExpand {
  0% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) scale(2.5);
    opacity: 0;
    border-width: 0;
  }
}

/* Partículas que orbitan alrededor */
.card::before {
  content: "⭐";
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 24px;
  opacity: 0;
  z-index: 20;
  pointer-events: none;
}

.card:hover::before {
  animation: orbit 2s linear infinite;
  animation-delay: 1.5s;
  opacity: 1;
}

@keyframes orbit {
  0% {
    transform: translate(-50%, -50%) rotate(0deg) translateX(80px) rotate(0deg);
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg) translateX(80px) rotate(-360deg);
  }
}

/* Destello final */
.card::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255, 215, 0, 0.4), transparent 70%);
  border-radius: 16px;
  opacity: 0;
  pointer-events: none;
  z-index: 14;
}

.card:hover::after {
  animation: flash 0.3s ease;
  animation-delay: 2.2s;
}

@keyframes flash {
  0%, 100% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
}
</style>